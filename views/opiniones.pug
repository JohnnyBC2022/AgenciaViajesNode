extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Estas son las opiniones de nuestros clientes
        include ./layout/bloque_opiniones

        .row
            .col-md-12
                h2.d-block.w-100.text-center Déjanos tu opinión

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/opiniones" method="Post" autocomplete="off")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Escribe tu nombre...", name="nombre", class="form-control", value=nombre || '')
                        .form-group
                            label(for="email") Correo electrónico
                            input#email(type="text", placeholder="Escribe tu email...", name="email", class="form-control", value=email || '')
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(placeholder="Escribe tu mensaje...", name="mensaje", class="form-control", rows=3)= mensaje || ''
                        .d-flex.mt-4.justify-content-center
                            input.btn.btn-success.px-3(type="submit", value="Enviar comentario")
                            button.btn.btn-secondary.ms-4(type="reset") Limpiar